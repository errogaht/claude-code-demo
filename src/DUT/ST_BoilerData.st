(*
    Структура данных котла для каскадного управления
    Содержит все параметры состояния и управления отдельным котлом
*)
TYPE ST_BoilerData :
STRUCT
    (* === Входные данные от ШУПК === *)
    bOnline             : BOOL;         // Контроллер ШУПК на связи
    bRemoteMode         : BOOL;         // Выбран дистанционный режим управления
    bFault              : BOOL;         // Неисправность котла
    rActualPower        : REAL;         // Текущая мощность горелки, МВт (1.0 - 4.0)
    rActualPressure     : REAL;         // Текущее давление в котле, МПа
    bRunning            : BOOL;         // Котел работает (обратная связь)

    (* === Выходные команды на ШУПК === *)
    bCmdStart           : BOOL;         // Команда запуска котла
    bCmdStop            : BOOL;         // Команда останова котла
    bCmdPressureMode    : BOOL;         // Режим управления по давлению (TRUE) / по мощности (FALSE)
    rCmdPressure        : REAL;         // Уставка давления для режима давления, МПа
    rCmdPower           : REAL;         // Уставка мощности для режима мощности, МВт

    (* === Параметры каскадного управления === *)
    nPriority           : INT := 0;     // Приоритет котла (0 - не участвует, 1-4 - приоритет)
    nPriorityOperator   : INT := 0;     // Приоритет заданный оператором (сохраняется при сбросе)

    (* === Внутренние состояния === *)
    bAvailable          : BOOL;         // Котел доступен для каскадного управления
    bIsMaster           : BOOL;         // Котел является основным (ведущим)
    bIsReserve          : BOOL;         // Котел является резервным
    bInCascade          : BOOL;         // Котел участвует в каскаде (работает)

    (* === Ramping для резервных котлов === *)
    rPowerSetpoint      : REAL;         // Текущая уставка мощности (с учетом ramping)

END_STRUCT
END_TYPE
